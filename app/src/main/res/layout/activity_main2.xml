<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#565051"
    android:orientation="vertical"
    tools:context=".Main2Activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"

        >
        <RelativeLayout
            android:id="@+id/srcLayout"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"

            >

            <EditText
                android:id="@+id/search"
                android:layout_width="150dp"
                android:hint="Search Here"
                android:textSize="14sp"
                android:paddingLeft="30dp"
                android:textColor="@android:color/white"
                android:textColorHint="#D8D5D5"
                android:layout_height="40dp"
                android:inputType="text"
                android:background="@drawable/edit_text_new"
                />

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="#565051"
                android:src="@drawable/ic_baseline_search_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="10dp"
                android:text="Button"/>


        </RelativeLayout>


       <!-- <EditText
            android:id="@+id/search"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            >

        </EditText>-->


        <Spinner

            android:id="@+id/spinner"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/srcLayout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/edit_text_new"
            android:layout_centerHorizontal="true"
            android:contextClickable="true"
            />


        <Button
            android:id="@+id/website"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/website"
            android:layout_marginRight="10dp"
            >

        </Button>
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ebongarologo"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/logo"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ebongarologo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="পরিধির বাইরে একটুখানি"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="15sp" />
    </RelativeLayout>


<!--    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">-->


    <ListView
        android:id="@+id/recycler_news"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".85"
        android:clickable="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp"
        android:focusable="true"
        android:scrollingCache="false"
        android:smoothScrollbar="true" />
    <!--    </LinearLayout>-->




</LinearLayout>





